#include <stdio.h>

float areacirculo(float a);

float main(){
    float a;
    
        printf("Digite a raia do circulo: ");    /* Digite valores*/
        scanf("%f",&a);
        
        
        printf("\nA area do circulo é %.2f", areacirculo(a));    /* Imprime resultado da função*/
        
        return 0;
        
        }
    float areacirculo(float a){
        float result;
        
        result = (a*a) * 3.14;  //Calcula area do circulo
        
        return result;
    }

